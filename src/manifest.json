{
    "manifest_version": 2,
    "name": "ChatWork Plus",
    "description": "ChatWorkを少し便利にします",
    "version": "0.1",
    "default_locale": "ja",
    "icons": {
        "128": "icon/icon-128.png",
        "512": "icon/icon-512.png"
    },
    "content_scripts": [{
        "matches": ["*://www.chatwork.com/*"],
        "js": ["/js/content.js"],
        "run_at": "document_end"
    }],
    "browser_action": {
        "default_icon": {
            "128": "icon/icon-128.png",
            "512": "icon/icon-512.png"
        },
        "default_title": "ChatWork Plus"
    },
    "permissions": []
}